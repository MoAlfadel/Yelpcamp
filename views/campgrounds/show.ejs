<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/campgrounds/css/stars.css" />

<section class="show">
    <div class="campground-container">
        <!-- Slider container -->
        <div class="slider">
            <%if(campground.image.length > 0){ for ( let img of
            campground.image) { %>
            <div class="slide">
                <img src="<%= img.url %>" alt="" />
            </div>
            <% } %>
            <!-- Control buttons -->
            <% if(campground.image.length > 1 ){ %>
            <button class="slider-btn btn-next">
                <i class="fa-solid fa-angle-right"></i>
            </button>
            <button class="slider-btn btn-prev">
                <i class="fa-solid fa-angle-left"></i>
            </button>
            <% } }%>
        </div>
        <div class="text">
            <div class="info">
                <h2 class="title"><%= campground.title %></h2>
                <p class="description"><%= campground.description %></p>
            </div>
            <div class="location"><%= campground.location %></div>
            <div class="price">$<%= campground.price %>/night</div>
            <div class="rating">
                <div class="rating-container">
                    Rating : <%= campground.rating %>
                    <i class="fa fa-star star-icon"> </i>
                </div>
                <div class="reviews-number">
                    <small> <%= campground.reviews.length %> Reviews </small>
                </div>
            </div>
            <div class="author">
                Submitted By <%= campground.author.username %>
            </div>
            <% if( currentUser && campground.author.id === currentUser.id) {%>
            <div class="links">
                <div class="btn btn-states">
                    <a href="/campgrounds/<%=campground.id %>/edit">edit</a>
                </div>
                <form
                    action="/campgrounds/<%=campground.id%>?_method=delete"
                    method="post"
                >
                    <button class="btn danger btn-states">Delete</button>
                </form>
            </div>
            <% } %>
        </div>
    </div>
    <div class="review-container">
        <% if(currentUser) { %>
        <form
            action="/campgrounds/<%=campground.id %>/reviews"
            method="post"
            class="form-style add-review"
            novalidate
            id="form"
        >
            <h3 class="section-title">
                Leave Review
                <div class="shadow">interact</div>
            </h3>
            <fieldset class="starability-basic">
                <input
                    type="radio"
                    id="no-rate"
                    class="input-no-rate"
                    name="review[rating]"
                    value="1"
                    checked
                    aria-label="No rating."
                />
                <input
                    type="radio"
                    id="first-rate1"
                    name="review[rating]"
                    value="1"
                />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input
                    type="radio"
                    id="first-rate2"
                    name="review[rating]"
                    value="2"
                />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input
                    type="radio"
                    id="first-rate3"
                    name="review[rating]"
                    value="3"
                />
                <label for="first-rate3" title="Average">3 stars</label>
                <input
                    type="radio"
                    id="first-rate4"
                    name="review[rating]"
                    value="4"
                />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input
                    type="radio"
                    id="first-rate5"
                    name="review[rating]"
                    value="5"
                />
                <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
            <div class="field">
                <label for="body">Review </label>
                <textarea
                    name="review[body]"
                    id="body"
                    cols="30"
                    rows="3"
                ></textarea>
                <i class="fa-regular fa-circle-check bass icon"></i>
                <i class="fa-regular fa-exclamation-circle error icon"></i>
                <small> it is look good </small>
            </div>
            <button class="btn positive btn-states">add</button>
        </form>
        <script src="/campgrounds/js/formValidation.js"></script>
        <% } %>
        <div class="reviews-display">
            <% if(campground.reviews.length > 0) {%>
            <h3 class="section-title">
                Reviews
                <div class="shadow">interact</div>
            </h3>
            <% } %> <% for (let review of campground.reviews) {%>
            <div class="review-box">
                <h4 class="author">
                    <span> <%= review.author.username[0] %></span><%=
                    review.author.username %>
                </h4>
                <p class="starability-result" data-rating="<%=review.rating%>">
                    Rated :<%= review.rating %> stars
                </p>
                <p class="body">Review : <span> <%= review.body %></span></p>
                <% if( currentUser && review.author.id === currentUser.id) {%>
                <form
                    action="/campgrounds/<%=campground.id%>/reviews/<%=review.id%>?_method=delete"
                    method="post"
                    class=""
                >
                    <button class="btn danger">Delete</button>
                </form>
                <% } %>
            </div>
            <% } %>
        </div>
    </div>
    <script src="/campgrounds/js/slider.js"></script>
</section>
