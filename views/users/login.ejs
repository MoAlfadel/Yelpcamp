<% layout("/layouts/boilerplate") %>

<section class="sign">
    <h2 class="section-title">
        Login
        <div class="shadow">Sign in</div>
    </h2>
    <form action="/login" method="POST" class="form-style" id="form" novalidate>
        <div class="field">
            <label for="username">username</label>
            <input id="username" type="text" name="username" />
            <i class="info fa-solid fa-user"></i>
            <i class="fa-regular fa-circle-check bass icon"></i>
            <i class="fa-regular fa-exclamation-circle error icon"></i>
            <small> it is look good </small>
        </div>
        <div class="field">
            <label for="password">Password</label>
            <input id="password" type="password" name="password" />
            <i class="info fa-solid fa-lock"></i>
            <i class="fa-regular fa-circle-check bass icon"></i>
            <i class="fa-regular fa-exclamation-circle error icon"></i>
            <small> it is look good </small>
        </div>
        <button class="btn sign btn-states">login</button>
    </form>
    <div class="or"><div class="text">or</div></div>
    <button type="button" class="login-with-google-btn">
        <a href="/google"> Sign in with Google </a>
    </button>
    <div class="sign-up">
        <div class="div">Don't have an account ?</div>
        <a href="/register">Sign up</a>
    </div>
    <script src="/campgrounds/js/formValidation.js"></script>
</section>
